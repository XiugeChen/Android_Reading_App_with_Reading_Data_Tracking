<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme -->
    <style name="LightTheme_VerticallyRead" parent="AppTheme">
        <item name="textColor">@color/black</item>
        <item name="hintTextColor">@color/deep_gray</item>
        <item name="backgroundColor">@color/white</item>
        <item name="subbackgroundColor">@color/light_gray</item>

        <item name="themeSwitchText">Switch to Dark Theme</item>
        <item name="readModeSwitchText">Switch to Horizontally Swipe</item>
    </style>

    <style name="DarkTheme_VerticallyRead" parent="AppTheme">
        <item name="textColor">@color/white</item>
        <item name="hintTextColor">@color/light_gray</item>
        <item name="backgroundColor">@color/black</item>
        <item name="subbackgroundColor">@color/deep_gray</item>

        <item name="themeSwitchText">Switch to Light Theme</item>
        <item name="readModeSwitchText">Switch to Horizontally Swipe</item>
    </style>

    <style name="LightTheme_SwipeRead" parent="AppTheme">
        <item name="textColor">@color/black</item>
        <item name="hintTextColor">@color/deep_gray</item>
        <item name="backgroundColor">@color/white</item>
        <item name="subbackgroundColor">@color/light_gray</item>

        <item name="themeSwitchText">Switch to Dark Theme</item>
        <item name="readModeSwitchText">Switch to Vertically Swipe</item>
    </style>

    <style name="DarkTheme_SwipeRead" parent="AppTheme">
        <item name="textColor">@color/white</item>
        <item name="hintTextColor">@color/light_gray</item>
        <item name="backgroundColor">@color/black</item>
        <item name="subbackgroundColor">@color/deep_gray</item>

        <item name="themeSwitchText">Switch to Light Theme</item>
        <item name="readModeSwitchText">Switch to Vertically Swipe</item>
    </style>

</resources>
